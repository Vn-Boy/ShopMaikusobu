{
  "name": "server",
  "version": "1.0.0",
  "description": "server",
  "main": "app.js",
  "scripts": {
    "test": "cross-env MODE=TEST jest --verbose --runInBand",
    "build": "tsc",
    "build-template": "npm install --force && tsc && cpx \"./src/api/v1/utils/email/template/**/*.handlebars\" ./dist/js/api/v1/utils/email/template --clean",
    "build-asset": "cpx \"./src/assets/**/*.jpg\" ./dist/assets --clean",
    "dev": "cross-env MODE=DEVELOPMENT nodemon dist/js/app.js",
    "prod": "cross-env MODE=PRODUCTION node dist/js/app.js",
    "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
    "build-dev": "concurrently \"npm run build-template\" \"npm run dev\"",
    "populate": "nodemon dist/js/populateDB.js"
  },
  "author": "maikusobu",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@socket.io/cluster-adapter": "^0.2.2",
    "@socket.io/sticky": "^1.0.3",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "bson": "^5.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-unless": "^2.1.3",
    "google-auth-library": "^9.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongo-morgan": "^2.0.3",
    "mongoose": "^7.3.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.12",
    "nodemailer": "^6.9.4",
    "path": "^0.12.7",
    "save": "^2.9.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^5.0.10"
  }
